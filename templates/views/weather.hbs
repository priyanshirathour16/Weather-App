<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerlinks}}
</head>
<body>
    {{>navbar}}
<!-- main header -->
     
    <div class = "container-fluid main_header">
        <div class="row">
            <div class = "col-md-10 col-12 mx-auto">
                <div class = "main_content">
                    <form class=" temp_form">
                        <input type = "text" id="cityName" placeholder="Enter Your City Name" autocomplete="off"/>
                        <input type="submit" value = "search" id = "submitbutton"/>
                    </form>
                </div>
                <div class = "tempInfo">
                    <div class="top_layer">
                          <p id="day">Tuesday</p>
                          <p id="today-date">16 APR</p>
                    </div>
                    <div class="main_layer ">
                        <p id = "city_name">Get Output here</p>
                        <div class="bottom_layer data-hidden">
                            <p id="temp"><span>0</span><sup>o</sup>C</p>
                            <p id="temp_status"><i class="fa-regular fa-cloud"></i></i></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- footer code -->
    {{>footer}}


    <script src="js/main.js"></script>
    <script>
        const getday = ()=>{
            let weekday = new Array(7);
            weekday[0] = "Sunday";
            weekday[1] = "Monday";
            weekday[2] = "Tuesday";
            weekday[3] = "Wednesday";
            weekday[4] = "Thursday";
            weekday[5] = "Friday";
            weekday[6] = "Saturday";

            let currentTime = new Date();
            let currnday = weekday[currentTime.getDay()];
            let day = document.getElementById("day");
            day.innerText  = currnday;

        }

        getday();
       
       
    
    </script>


</body>
</html>